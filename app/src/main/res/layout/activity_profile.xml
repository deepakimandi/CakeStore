<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    tools:context=".Profile">

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/profile_heading"
        android:fontFamily="@font/bungee"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Your Profile"
        android:textSize="24sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_person_black_24dp"
                    android:layout_weight="1"/>

                <TextView
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:id="@+id/name_profile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="9"
                    android:text="Full Name"
                    android:inputType="text"
                    android:fontFamily="@font/antic"/>

                <ImageView
                    android:clickable="true"
                    android:id="@+id/edit_name_p"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_edit_primary_24dp"
                    tools:ignore="VectorDrawableCompat" />

            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_email_black_24dp"
                    android:layout_weight="1"/>
                <TextView
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:id="@+id/email_profile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="9"
                    android:text="Email"
                    android:textSize="22sp"
                    android:inputType="text"
                    android:fontFamily="@font/antic"/>

                <ImageView
                    android:clickable="true"
                    android:id="@+id/edit_email_p"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_edit_primary_24dp"
                    tools:ignore="VectorDrawableCompat"
                    />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_local_phone_black_24dp"
                    android:layout_weight="1"/>

                <TextView
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:id="@+id/phone_profile"
                    android:inputType="number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="9"
                    android:text="Phone"
                    android:textSize="22sp" />

                <ImageView
                    android:clickable="true"
                    android:id="@+id/edit_phone_p"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_edit_primary_24dp"
                    android:fontFamily="@font/antic"
                    tools:ignore="VectorDrawableCompat" />

            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_location_on_black_24dp"
                    android:layout_weight="1"/>

                <TextView
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:id="@+id/address_profile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="9"
                    android:text="Address"
                    android:textSize="22sp"
                    android:inputType="textMultiLine"
                    android:fontFamily="@font/antic"
                    />

                <ImageView
                    android:clickable="true"
                    android:id="@+id/edit_address_p"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_edit_primary_24dp"
                    tools:ignore="VectorDrawableCompat" />

            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:orientation="horizontal">


                <androidx.appcompat.widget.AppCompatButton
                    android:layout_marginHorizontal="100dp"
                    android:id="@+id/reset_pass"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_ui"
                    android:drawableLeft="@drawable/ic_lock_white_24dp"
                    android:fontFamily="@font/bungee"
                    android:text="Reset Password"
                    android:textColor="#fff"
                    android:textSize="13dp" />


            </LinearLayout>



<!--            <View-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="1dip"-->
<!--                android:layout_marginTop="8dp"-->
<!--                android:layout_marginBottom="8dp"-->
<!--                android:background="#000"/>-->

        </LinearLayout>

    </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="1dip"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#000"/>

        <TextView
            android:id="@+id/order_heading"
            android:fontFamily="@font/bungee"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Past Orders"
            android:padding="8dp"
            android:textSize="24sp"/>
        <LinearLayout
            android:layout_below="@+id/order_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:padding="4dp"
                android:nestedScrollingEnabled="true"
                android:id="@+id/orders"
                android:background="@color/colorAccent"/>
        </LinearLayout>




    </LinearLayout>




</androidx.core.widget.NestedScrollView>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:background="@drawable/rounded"
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:menu="@menu/nav_items"
        android:padding="8dp"
        android:elevation="16dp"
        android:layout_alignParentLeft="true">

    </com.google.android.material.bottomnavigation.BottomNavigationView>
</RelativeLayout>
